Func Test1%()
'ToolbarEnable(2,1);
var i%;
for i% := 1 to 5 do
    PrintLog("1\n");
    Yield(1);
next;
return 1;
end;

Func Test2%()
PrintLog("2\n");
Yield(1);
return 1;
end;

'Clear Log
View(LogHandle());
EditSelectAll();
EditClear();

Func Quit%()
return 0;
end

Func Idle%()
return 1;
end;

ToolbarSet(3, "Test1", Test1%);
ToolbarSet(2, "Test2", Test2%);
ToolbarSet(1, "Quit", Quit%);
ToolbarSet(0, "Idle",  Idle%);
Toolbar("Test", 0x03FF);      'Display toolbar, allow all user actions
